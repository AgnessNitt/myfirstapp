<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/half_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/image_dogma"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dogma"/>

    <Button
        android:id="@+id/button_dogma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dogma"
        app:layout_constraintEnd_toStartOf="@id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_dogma"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="186dp"/>

    <ImageView
        android:id="@+id/mne_ne_bolno"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/half_width"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mnenebolno"/>

    <Button
        android:id="@+id/button_mnenebolno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I don`t get hurt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/half_width"
        app:layout_constraintTop_toBottomOf="@id/image_dogma"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="186dp" />

    <ImageView
        android:id="@+id/Pleasantville"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_dogma"
        app:srcCompat="@drawable/pleasantville"/>

    <Button
        android:id="@+id/bottom_pleasantville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pleasantville"
        app:layout_constraintEnd_toStartOf="@id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Pleasantville"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="186dp" />

    <ImageView
        android:id="@+id/Coven"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/half_width"
        app:layout_constraintTop_toBottomOf="@id/button_mnenebolno"
        app:srcCompat="@drawable/coven" />

    <Button
        android:id="@+id/btn_coven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/half_width"
        app:layout_constraintTop_toBottomOf="@id/Coven"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="186dp" />

    <ImageView
        android:id="@+id/Stariki"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_pleasantville"
        app:srcCompat="@drawable/stariki"/>

    <Button
        android:id="@+id/stariki"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:text="В бой идут одни старики"
        app:layout_constraintEnd_toStartOf="@id/half_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Stariki" />

    <ImageView
        android:id="@+id/Truman_show"
        android:layout_width="153dp"
        android:layout_height="167dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/half_width"
        app:layout_constraintTop_toBottomOf="@id/btn_coven"
        app:srcCompat="@drawable/truman" />

    <Button
        android:id="@+id/truman_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Truman show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/half_width"
        app:layout_constraintTop_toBottomOf="@id/Truman_show"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="186dp" />


</androidx.constraintlayout.widget.ConstraintLayout>